<Window x:Class="WpfApp1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="390" Orientation="Horizontal">
            <Label Width="150" HorizontalAlignment="Center" Foreground="White" Background="Chocolate">
                Nazwa Produktu

            </Label>
            <Label Width="150" HorizontalAlignment="Center" Foreground="White" Background="Chocolate">
                Producent
            </Label>
            <Label Width="90" HorizontalAlignment="Center" Foreground="White" Background="Chocolate">
                Cena
            </Label>
        </StackPanel>
        <StackPanel  Width="400" Height="450" HorizontalAlignment="Left"  Orientation="Horizontal" Grid.ColumnSpan="3">
            <ListBox x:Name="Wyswietlanie_nazwy" Height="380" Width="150"/>
            <ListBox x:Name="Wyswietlanie_producenta" Height="380" Width="150"/>
            <ListBox x:Name="Wyswietlanie_ceny" Height="380" Width="90"/>
        </StackPanel>
    </Grid>
</Window>
